{% macro picture-macro(class, name, path = "", alt = "", avif = true, webp = true, dppx = 2, vp_m = "768px", vp_l = "1280px") %}
<picture>
  <source media="(min-width: {{ vp_l }})" srcset="./img/{{ path }}{{ name }}-l@1x.avif, ./img/{{ path }}{{ name }}-l@2x.avif 2x"
    type="image/avif">
  <source media="(min-width: {{ vp_m }})" srcset="./img/{{ path }}{{ name }}-m@1x.avif, ./img/{{ path }}{{ name }}-m@2x.avif 2x"
    type="image/avif">
  <source srcset="./img/{{ path }}{{ name }}-s@1x.avif, ./img/{{ path }}{{ name }}-s@2x.avif 2x" type="image/avif">

  <source media="(min-width: {{ vp_l }})" srcset="./img/{{ path }}{{ name }}-l@1x.webp, ./img/{{ path }}{{ name }}-l@2x.webp 2x"
    type="image/webp">
  <source media="(min-width: {{ vp_m }})" srcset="./img/{{ path }}{{ name }}-m@1x.webp, ./img/{{ path }}{{ name }}-m@2x.webp 2x"
    type="image/webp">
  <source srcset="./img/{{ path }}{{ name }}-s@1x.webp, ./img/{{ path }}{{ name }}-s@2x.webp 2x" type="image/webp">

  <source media="(min-width: {{ vp_l }})" srcset="./img/{{ path }}{{ name }}-l@1x.png, ./img/{{ path }}{{ name }}-l@2x.png 2x">
  <source media="(min-width: {{ vp_m }})" srcset="./img/{{ path }}{{ name }}-m@1x.png, ./img/{{ path }}{{ name }}-m@2x.png 2x">
  <img class="{{ class }}" src="./img/{{ path }}{{ name }}-s@1x.png" srcset="./img/{{ path }}{{ name }}-s@2x.png 2x"
    alt="{{ alt }}">
</picture>
{% endmacro %}
